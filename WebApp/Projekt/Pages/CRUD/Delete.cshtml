@page
@model Projekt.CRUD.DeleteModel


<div class="card" style="border-radius:20px">
    <h2 class=" display-5 fw-bold text-body-emphasis rounded text-center  p-3">Are you sure you want to delete this?</h2>
</div>
<br />

<div class="card" style="border-radius:20px">
    <div class="row" style="padding:10px">
        <div class="col-lg-5">
            <img src="data:image/jpg;base64,@Model.Item.ImageData" class="img-fluid" alt="Item Image" style="border-radius:20px; max-height:600px">
        </div>
        <div class="col-lg-7">
            <h2 style="font-family:sans-serif; font-weight:bold;">@Model.Item.Name</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item fontItem">Category: @Model.Item.Category</li>
                <li class="list-group-item fontItem">State: @Model.Item.State</li>
                <li class="list-group-item fontItem">Price: @(Model.Item.Price)$</li>
                <li class="list-group-item fontItem">Description: <br /> @Model.Item.Description</li>
            </ul>
            <form method="post">
                <div class="row mb-3">
                    <input type="hidden" asp-for="Item.Id" />
                    <div class="col d-grid">
                        <input type="submit" value="Delete" style="border-radius:20px" class="btn btn-outline-danger" />
                    </div>
                    <div class="col d-grid">
                        <a class="btn btn-outline-primary " style="border-radius:20px" asp-page="/Users/MyItems" roles="button">Go Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>